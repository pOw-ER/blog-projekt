<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Article</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <%- include('../partials/header.ejs')  %>
  <section>
    <h2 id="new-article-title">ADD NEW ARTICLE</h2>
    <span id="short-line"></span>
    <form action="/new" method="post">
      <input type="text" name="articleTitle" id="article-title-input" placeholder="Title">
      <input type="text" name="articlePicture" id="article-picture" placeholder="Url Picture">
      <input type="text" name="authorName" id="author-name" placeholder="Author">
      <input type="text" name="authorPicture" id="article-picture" placeholder="Author Picture">
      <textarea name="authorArticle" id="author-article">Write your article hier...</textarea>
      <input type="submit" value="SEND ARTICLE">
    </form>
  </section>

  <%- include('../partials/footer.ejs')  %>
</body>

</html>
